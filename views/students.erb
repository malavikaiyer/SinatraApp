<h1>Students</h1>
<a href="/students/new">Create a new student record</a>
<% if @students.any? %>
    <ul id="students">
        <% @students.each do |student| %>
        <li><a href="/students/<%=student.id %>"><%=student.name%></a></li>
        <% end %>
    </ul>
<% else %>
    <p>No student records have been created yet!</p>
<% end %>